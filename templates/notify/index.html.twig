{% extends 'base.html.twig' %}

{% block title %}Formulaire de notification{% endblock %}

{% block body %}
<h4 class="display-3">Formulaire: Notification</h4>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <div class="card-body">
                    {#Include a template for principal tab#}
                    {% include 'notify/_principalTab.html.twig' %}

                    <div class="row g-3">
                        {{ form_start(form) }}
                        <div class="tab-content row g-3" id="tabContent">
                            <div class="tab-pane fade show active" id="contenu">
                                {#Include a template for NotificationFormType only title and Date d'activation#}
                                {% include 'notify/_formNotification.html.twig' %}
                                {#Include a template for NotificationBlockFormType#}
                                {% include 'notify/_formNotificationBlock.html.twig' %}
                                <div class="d-md-block">
                                    {#A implementer l'evenement qui va ajouter un Bloc#}
                                    <button type="button" class="btn btn-success">Ajouter un Bloc</button>
                                    {#Button pour envoyer le formularire au controller#}
                                    <button class="btn btn-primary">Valider</button>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="destinataires" role="tabpanel">
                                <p>Destinataires<p>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
